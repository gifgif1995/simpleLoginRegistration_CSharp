<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login/Reg</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    @using simpleLoginRegistration.Models;
    @model RegistrationModel; 

<div class="card shadow m-1 container">
  <h3 class="text-center p-2">Register</h3>
  <div class="card-body text-secondary">
    <form action="registration" method="POST" novalidate>
      <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" >
        <span asp-validation-for="FirstName" style="font-size:small; color: red;"></span>
      </div>
      <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" >
        <span asp-validation-for="LastName" style="font-size:small; color: red;"></span>
      </div>
      <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" >
        <span asp-validation-for="Email" style="font-size:small; color: red;"></span>
      </div>
      <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" >
        <span asp-validation-for="Password" style="font-size:small; color: red;"></span>
      </div>
      <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password:</label>
        <input asp-for="ConfirmPassword" class="form-control">
        <span asp-validation-for="ConfirmPassword" style="font-size:small; color: red;"></span>
      </div>
      <footer>
        <button type="submit" class="btn btn-primary mt-3">Register</button>
      </footer>
    </form>
  </div>
</div>
</body>
</html>

