<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login/Reg</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
@using simpleLoginRegistration.Models;
@model LoginModel;

<div class="card shadow m-1 container">
  <h3 class="text-center p-2">Login</h3>
  <div class="card-body text-secondary">
    <form action="login" method="POST" novalidate>
      <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail" class="form-control">
        <span asp-validation-for="LoginEmail" style="font-size:small; color: red;"></span>
      </div>
      <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword" class="form-control">
        <span asp-validation-for="LoginPassword" style="font-size:small; color: red;"></span>
      </div>
      <footer>
        <button type="submit" class="btn btn-primary mt-3">Log in</button>
      </footer>
    </form>
  </div>
</div>  
</body>
</html>

